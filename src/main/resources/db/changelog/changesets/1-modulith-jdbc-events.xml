<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="martynem">
        <createTable tableName="event_publication">
            <column name="id" type="UUID NOT NULL">
                <constraints primaryKey="true"/>
            </column>
            <column name="listener_id" type="TEXT NOT NULL"/>
            <column name="event_type" type="TEXT NOT NULL"/>
            <column name="serialized_event" type="TEXT NOT NULL"/>
            <column name="publication_date" type="TIMESTAMP WITH TIME ZONE NOT NULL"/>
            <column name="completion_date" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
